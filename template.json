{
    "variables": {
        "cpus": "2",
        "memory": "1024",
        "hostname": "xenial",
        "headless": "false",
        "disk_size": "10240",
        "hyperv_switchname":"External-Realtek"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.1-server-amd64.iso",
            "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
            "iso_checksum_type": "sha256",
            "vm_name": "packer-ubuntu-16.04-amd64",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "boot_wait": "5s",
            "http_directory": "http_virtualbox",
            "boot_command": [
                "<enter><wait5>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "auto=true ",
                "priority=critical ",
                "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<wait><enter>"
            ],
            "ssh_wait_timeout": "30m",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "sudo systemctl poweroff",
            "vboxmanage": [
                ["modifyvm", "{{ .Name }}", "--memory", "{{ user `memory` }}"],
                ["modifyvm", "{{ .Name }}", "--cpus", "{{ user `cpus` }}"]
            ]
        },
        {
            "type": "hyperv-iso",
            "vm_name":"packer-ubuntu-16.04-amd64",
            "disk_size": "{{user `disk_size`}}",
            "guest_additions_mode":"disable",
            "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.2-server-amd64.iso",
            "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
            "iso_checksum_type": "sha256",
            "communicator":"ssh",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout" : "30m",
            "http_directory": "./http_hyperv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait5>",
                "<f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz ",
                "initrd=/install/initrd.gz ",
                "auto=true ",
                "priority=critical ",
                "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<wait><enter>"
            ],
            "shutdown_command": "echo 'vagrant' | sudo -S -E shutdown -P now",
            "ram_size": "{{user `memory`}}",
            "cpu": "{{user `cpus`}}",
            "generation": 1,
            "switch_name":"{{user `hyperv_switchname`}}",
            "enable_secure_boot":false,
            "enable_dynamic_memory":false
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/install.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/virtualbox.sh"
            ],
            "only": ["virtualbox-iso"],
            "pause_before": "10s"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/hyperv.sh"
            ],
            "only": ["hyperv-iso"],
            "pause_before": "10s"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/cleanup.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "ubuntu-16.04-amd64-{{.Provider}}.box",
            "vagrantfile_template": "Vagrantfile.template"
        }
    ]
}
